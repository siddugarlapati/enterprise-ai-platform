# Application
APP_NAME=Enterprise AI Platform
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ML Models
MODEL_CACHE_DIR=./model_cache
DEFAULT_LLM_MODEL=distilbert-base-uncased
EMBEDDING_MODEL=all-MiniLM-L6-v2

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=enterprise-ai

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# LLM APIs (Optional - for advanced features)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Vector Databases
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
CHROMA_PERSIST_DIR=./chroma_db
PINECONE_API_KEY=
PINECONE_ENV=us-west1-gcp
